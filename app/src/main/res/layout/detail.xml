<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="location.saif.com.nearme.NearMe">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".60"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/top_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".04">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/span_20dp"
            android:layout_marginTop="@dimen/span_20dp"
            android:textSize="@dimen/text_size_30sp"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_title"
            android:layout_marginStart="@dimen/span_20dp"
            android:textSize="@dimen/text_size_20sp"
            tools:text="category" />

        <TextView
            android:id="@+id/detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_category"
            android:layout_marginStart="@dimen/span_20dp"
            android:layout_marginTop="@dimen/span_10dp"
            android:textSize="@dimen/text_size_20sp"
            tools:text="address" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_address"
            android:layout_marginTop="@dimen/span_40dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/span_20dp"
                android:src="@drawable/phone" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/span_20dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/span_20dp"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/span_30dp"
                android:src="@drawable/whats" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
