<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_name"
        style="@style/normal_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/review_color"
        android:maxLines="1"
        tools:text="Name" />

    <TextView
        android:id="@+id/review_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_name"
        android:layout_marginVertical="@dimen/span_3dp"
        android:ellipsize="end"
        android:textColor="@color/subtitle_text_color"
        android:maxLines="1"
        android:textSize="@dimen/text_size_10sp"
        tools:text="a day ago" />

    <TextView
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_time"
        android:textColor="@color/review_color"
        android:layout_marginTop="@dimen/span_3dp"
        tools:text="@string/open_label" />

    <RatingBar
        android:id="@+id/review_ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="@dimen/span_5dp"
        android:numStars="5"
        android:rating="2"
        android:theme="@style/ratingBar" />


</RelativeLayout>
