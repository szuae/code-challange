<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="title_style">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:paddingStart">@dimen/span_10dp</item>
    </style>

    <style name="sub_title_style">
        <item name="android:textColor">@color/subtitle_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:paddingStart">@dimen/span_10dp</item>
    </style>


</resources>
