<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="grid_element_container_style">
        <item name="android:layout_width">@dimen/span_100dp</item>
        <item name="android:layout_height">@dimen/span_100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="grid_small_element_container_style">
        <item name="android:layout_width">@dimen/span_100dp</item>
        <item name="android:layout_height">@dimen/span_60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="grid_small_element_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:top">@dimen/span_3dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>

    </style>

    <style name="grid_element_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="grid_element_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:top">@dimen/span_5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>

    </style>

    <style name="card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/span_20dp</item>
        <item name="android:background">@color/cardBackground</item>
        <item name="android:elevation">@dimen/span_3dp</item>

    </style>

    <style name="ratingBar" >
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/rating_color</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginStart">@dimen/span_10dp</item>
        <item name="android:layout_marginTop">@dimen/span_5dp</item>
        <item name="android:layout_marginEnd">@dimen/span_10dp</item>

    </style>


    <style name="title_style">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normal_title_style">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>


    <style name="sub_title_style">
        <item name="android:textColor">@color/subtitle_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:paddingStart">@dimen/span_10dp</item>
    </style>


</resources>
